<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="my.suveng.oauth.dao.AuthorizationDao">

    <resultMap type="my.suveng.oauth.entity.TbPermission" id="TbPermissionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="enname" column="enname" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="created" column="created" jdbcType="TIMESTAMP"/>
        <result property="updated" column="updated" jdbcType="TIMESTAMP"/>
    </resultMap>


    <select id="getGrantedAuthorityByUserId" resultMap="TbPermissionMap">
            select tb_user.id as tbId,tp.id as id,tp.name as name ,tp.enname as enname
            from tb_user
            left join tb_user_role tur on tb_user.id = tur.user_id
            left join tb_role_permission trp on tur.role_id = trp.role_id
            left join tb_permission tp on trp.permission_id = tp.id
            where tb_user.id = #{userId}
    </select>


</mapper>
