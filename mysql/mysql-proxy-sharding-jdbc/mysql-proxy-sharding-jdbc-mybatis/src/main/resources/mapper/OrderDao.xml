<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="my.suveng.shardingjdbcmybatisdemo.dao.OrderDao">

    <resultMap type="my.suveng.shardingjdbcmybatisdemo.entity.Order" id="OrderMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="uaId" column="ua_id" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="modifyTime" column="modify_time" jdbcType="TIMESTAMP"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="OrderMap">
        select
          id, ua_id, status, create_time, modify_time, type
        from sharding_demo.order
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="OrderMap">
        select
          id, ua_id, status, create_time, modify_time, type
        from sharding_demo.order
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="OrderMap">
        select
        id, ua_id, status, create_time, modify_time, type
        from sharding_demo.order
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uaId != null and uaId != ''">
                and ua_id = #{uaId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                and modify_time = #{modifyTime}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sharding_demo.order(ua_id, status, create_time, modify_time, type)
        values (#{uaId}, #{status}, #{createTime}, #{modifyTime}, #{type})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sharding_demo.order
        <set>
            <if test="uaId != null and uaId != ''">
                ua_id = #{uaId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sharding_demo.order where id = #{id}
    </delete>

</mapper>
